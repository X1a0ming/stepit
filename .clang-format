BasedOnStyle: Google
ColumnLimit: 120
AlignConsecutiveAssignments: Consecutive
AlignConsecutiveMacros: Consecutive
AllowShortBlocksOnASingleLine: Empty
DerivePointerAlignment: false
PointerAlignment: Right
ReferenceAlignment: Right
PenaltyBreakAssignment: 10000
PenaltyBreakBeforeMemberAccess: 1

KeepEmptyLines:
  AtEndOfFile: true
EmptyLineBeforeAccessModifier: LogicalBlock
WrapNamespaceBodyWithEmptyLines: Never

SortIncludes: CaseSensitive
IncludeBlocks: Preserve
IncludeCategories:
  - Regex: '^<[a-z_]+\.h>'
    Priority: 1
    SortPriority: 1
  - Regex: '^<[a-z_]+>'
    Priority: 2
    SortPriority: 2
  - Regex: '^<stepit/[^/]+\.h>'
    Priority: 3
    SortPriority: 4
  - Regex: '^<stepit/.*>'
    Priority: 4
    SortPriority: 5
  - Regex: '^<.*>'
    Priority: 5
    SortPriority: 3
  - Regex: '^".*"'
    Priority: 6
    SortPriority: 6
